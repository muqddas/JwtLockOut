@inject Microsoft.AspNetCore.Identity.SignInManager<JwtLockOut.Models.ApplicationUser> signInManager
@if (signInManager.IsSignedIn(User))
{
	<form method="post" id="logoutForm" asp-action="LogOff" asp-controller="Account">

		<ul class="nav navbar-nav">

			<li class="text-white nav-link"> Home , @User.Identity.Name! </li>
			<li><a class="text-white nav-link" href=" javascript:document.getElementById('logoutForm').submit() "> LogOff </a></li>
		</ul>


	</form>
}
else
{
	<ul class="nav navbar-nav">
		<li>
			@*@Html.ActionLink("Sign Up","Register","Account",routeValues:null, htmlAttributes: new {id="registerLink"})*@
			<a class="nav-link text-white" id=" registerLink " asp-controller="Account" asp-action="Register"> Register </a>

		</li>
		<li>
			@*@Html.ActionLink("Sign In","Login","Account",routeValues:null, htmlAttributes: new {id="loginLink"})*@
			<a class="nav-link text-white" id=" registerLink " asp-controller="Account" asp-action="Login"> Sign In </a>

		</li>


	</ul>
}